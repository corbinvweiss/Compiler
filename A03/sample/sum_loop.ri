fn sum(n: i32) -> i32
{
    let mut sum: i32;
    sum = 0;

    while n > 0 {
        sum = sum + n;
        n = n - 1;
    }
    return sum;
}

fn main()
{
    println(0, sum(0));
    println(1, sum(1));
    println(2, sum(2));
    println(3, sum(3));
    println(4, sum(4));
    println(5, sum(5));
}
